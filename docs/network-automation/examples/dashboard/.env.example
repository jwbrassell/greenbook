# Flask Settings
FLASK_APP=app.py
FLASK_ENV=development
FLASK_DEBUG=True
FLASK_HOST=0.0.0.0
FLASK_PORT=5000

# Network Devices
NETWORK_DEVICES=device1.example.com,device2.example.com
NETWORK_USER=admin
NETWORK_PASSWORD=your_secure_password

# Alert Thresholds
ALERT_CPU_THRESHOLD=80
ALERT_MEMORY_THRESHOLD=90
ALERT_ERROR_THRESHOLD=100
ALERT_TEMP_THRESHOLD=75

# Email Notifications
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USER=alerts@example.com
SMTP_PASSWORD=your_smtp_password
ALERT_FROM_ADDRESS=alerts@example.com
ALERT_TO_ADDRESSES=admin1@example.com,admin2@example.com

# Database Settings (Optional)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=network_monitoring
DB_USER=postgres
DB_PASSWORD=your_db_password

# Logging
LOG_LEVEL=INFO
LOG_FILE=network_monitoring.log

# SSL/TLS Settings
SSL_VERIFY=false  # Set to true in production

# Dashboard Settings
REFRESH_INTERVAL=60  # Dashboard refresh interval in seconds
CHART_TIMESPAN=24h  # Default chart timespan
CHART_GRANULARITY=5m  # Data point granularity

# Cache Settings (Optional)
CACHE_TYPE=simple  # Options: simple, redis, memcached
CACHE_REDIS_URL=redis://localhost:6379/0
CACHE_DEFAULT_TIMEOUT=300

# API Settings
API_TIMEOUT=30  # API request timeout in seconds
API_RETRIES=3   # Number of retry attempts
API_RATE_LIMIT=100  # Requests per minute

# Proxy Settings (Optional)
# HTTP_PROXY=http://proxy.example.com:8080
# HTTPS_PROXY=https://proxy.example.com:8080
# NO_PROXY=localhost,127.0.0.1

# Security Settings
SECRET_KEY=your_secure_secret_key_here  # Required for session management
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
PERMANENT_SESSION_LIFETIME=3600  # Session timeout in seconds
